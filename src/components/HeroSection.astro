---
import Section from "./Section.astro";
---

<Section
  title="Experience Tesla"
  subtitles={["Schedule a Demo Drive Today"]}
  color="white"
>
  <div slot="footer">
    <a
      href="#"
      class={`
            border-[1px]
            border-white
            bg-white/5
            backdrop-blur-sm
            rounded 
            font-medium 
            text-sm 
            px-24
            py-2
            inline-block
            hover:text-black
            hover:bg-white 
            transition-colors
            `}
    >
      Demo Drive
    </a>
  </div>
  <video
    slot="background"
    class="object-center object-cover h-full w-full"
    autoplay
    muted
    loop
    src="/video.webm"></video>
</Section>
